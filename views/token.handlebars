<style>
	textarea {
		width       : 500px;
		height      : 90px;
		font-size   : 12px;
		line-height : 1em;
	}

	h5 {
		margin : 25px 0px 10px;
	}
</style>

<div class="container">
	<div class="row">
		<form class="col s12">
			<div class="row">
				<div class="input-field col s12">
					<h5 class="header">{{config.name}}:</h5>
					<textarea id="textarea-{{id}}" class="materialize-textarea"
					          readonly="readonly" onclick="this.focus();this.select()">{{token}}</textarea>
					<label for="textarea-{{id}}"></label>
				</div>
			</div>
		</form>
	</div>
</div>